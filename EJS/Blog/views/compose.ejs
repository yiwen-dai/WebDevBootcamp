<%- include("partials/header"); -%>

<h1>Compose</h1>

<form action="/compose" method="POST" name="newEntry">
  <div class="form-group">
    <label for="title">Title</label>
    <input
      type="text"
      class="form-control"
      id="title"
      name="title"
      placeholder="Enter title"
    />
  </div>

  <div class="form-group">
    <label for="entry">Post Content</label>
    <textarea
      class="form-control"
      id="entry"
      name="entry"
      rows="3"
      placeholder="Enter post content"
    ></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Publish</button>
</form>

<%- include("partials/footer"); -%>
